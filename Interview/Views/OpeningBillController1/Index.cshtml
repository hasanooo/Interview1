<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List Table</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Item List</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Client</th>
                    <th>Capcity</th>
                    <th>Rate</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="itemList">
               
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Fetch data from the server
            $.ajax({
                url: 'OpeningBillController1/Getdata',
                method: 'GET',
                data: { id: 1 },
                success: function (items) {
                    items.forEach(item => {
                        $('#itemList').append(`
                                    <tr>
                                        <td>${item.id}</td>
                                        <td>${item.client}</td>
                                        <td>${item.capacity}</td>
                                        <td>${item.rate}</td>
                                        <td>
                                          <button class="btn btn-danger btn-sm" onclick="deleteItem(${item.id})">Delete</button>
                                          <button class="btn btn-danger btn-sm" onclick="update(${item.id})">Update</button>
                                          <button class="btn btn-danger btn-sm" onclick="view(${item.id})">View</button>
                                        </td>
                                    </tr>
                                `);
                    });
                },
                error: function (err) {
                    console.error(err);
                }
            });
        });

        function deleteItem(id) {
            // Implement delete logic here (optional)
            alert(`Delete item with ID: ${id}`);
        }
    </script>
</body>
</html>
